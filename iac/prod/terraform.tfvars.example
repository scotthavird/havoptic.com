# Copy to terraform.tfvars and fill in values

# Cloudflare Account ID (from dashboard or `npx wrangler whoami`)
cloudflare_account_id = "your-account-id-here"

# Domain (must be added to Cloudflare first)
domain = "havoptic.com"

# GitHub (for Pages integration)
github_owner = "scotthavird"
github_repo  = "havoptic.com"

# AWS Configuration (for SES email sending)
aws_region            = "us-east-1"
newsletter_from_email = "newsletter@havoptic.com"

# Sensitive tokens - set via environment variables:
# export TF_VAR_cloudflare_api_token="your-token-here"
# export TF_VAR_aws_access_key_id="your-aws-access-key"
# export TF_VAR_aws_secret_access_key="your-aws-secret-key"
